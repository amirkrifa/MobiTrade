<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@color/main_background"
	android:gravity="center_vertical">

	<ImageView android:id="@+id/fileIcon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical" />

	<TextView android:id="@+id/fileDescription"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:textSize="25px" android:textColor="@color/text_color"  />


</LinearLayout>
